def build(bld):
    module = bld.create_ns3_module('tor', ['internet', 'applications', 'point-to-point', 'point-to-point-layout', 'flow-monitor'])
    module.source = [
        'model/tor-base.cc',
        'model/tor.cc',
        'model/tor-fair.cc',
        'model/tor-pctcp.cc',
        'model/tor-n23.cc',
        'model/tor-bktap.cc',
        'model/pytalk.cc',
        'model/tor-predictor.cc',
        'model/cell-header.cc',
        'model/pseudo-socket.cc',
        'model/tokenbucket.cc',
        'model/dummy-tcp.cc',
        'helper/tor-star-helper.cc',
        'helper/tor-dumbbell-helper.cc',
        ]

    module_test = bld.create_ns3_module_test_library('tor')
    module_test.source = [
        #'test/tor-test-suite.cc',
        ]

    headers = bld(features=['ns3header'])
    headers.module = 'tor'
    headers.source = [
        'model/tor-base.h',
        'model/tor.h',
        'model/tor-fair.h',
        'model/tor-pctcp.h',
        'model/tor-n23.h',
        'model/tor-bktap.h',
        'model/pytalk.h',
        'model/tor-predictor.h',
        'model/cell-header.h',
        'model/pseudo-socket.h',
        'model/tokenbucket.h',
        'model/dummy-tcp.h',
        'helper/tor-star-helper.h',
        'helper/tor-dumbbell-helper.h',
        ]

    #if bld.env.ENABLE_EXAMPLES:
    #    bld.add_subdirs('examples')

    # bld.ns3_python_bindings()

